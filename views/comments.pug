extends sidebar 
block mainContent
  section.comments-section
    h2 Comments
    each comment in comments
      .comment-card
        .comment-header
          span.blog-name #{comment.blog.title}
          span.comment-date #{new Date(comment.createdAt).toLocaleDateString()}
        .comment-body
          p #{comment.comment}
        .comment-actions
          button.delete-btn(type="button" data-user-id=`${comment.id}`) Delete
