extends sidebar

block mainContent
  - const isBlog = blog?.type === 'blog'
  - const isRecipe = blog?.type === 'recipe'
  - const boolRecipe = !(isBlog || isRecipe) || isRecipe
  - const boolBlog = !(isBlog || isRecipe) || isBlog
  - const isNew = !(isBlog || isRecipe)
  - const pageTitle = isNew ? 'Upload Blog & Recipe' : `Update ${blog.type}`
  - const blogButtonText = isBlog ? 'Update blog' : 'Post blog'
  - const recipeButtonText = isRecipe ? 'Update Recipe' : 'Post recipe'

  section.section-container
    h2.section-title #{pageTitle}

    // Blog Section
    if boolBlog
      .blog-section
        h3 Blog
        .field
          label Title:
          input#blogTitle(type="text" placeholder="Enter blog title" value= isBlog ? blog.title : '')
        .field
          label Photo:
          input#blogPhoto(type="text" placeholder="Enter image link" value= isBlog ? blog.photo : '')
        .field
          label Description:
          textarea#blogDescription(placeholder="Enter blog description") #{isBlog ? blog.description : ''}
        button(data-id= isBlog ? blog.id : '' class= isNew ? 'postBlog' : 'updateBlog') #{blogButtonText}

    // Recipe Section
    if boolRecipe
      .recipe-section
        h3 Recipe
        .field
          label Title:
          input#recipeTitle(type="text" placeholder="Enter recipe title" value= isRecipe ? blog.title : '')
        .field
          label Photo:
          input#recipePhoto(type="text" placeholder="Enter recipe photo" value= isRecipe ? blog.photo : '')
        .field
          label Description:
          textarea#recipeDescription(placeholder="Enter recipe description") #{isRecipe ? blog.description : ''}
        .field
          label How to Cook:
          textarea#howToCook(placeholder="Steps to cook...") #{isRecipe ? blog.howToCook : ''}
        .field
          label Ingredients:
          input#ingredients(type="text" placeholder="apple, 2 cups sugar, ..." value= isRecipe ? blog.ingredients : '')
        .field
          label Time:
          input#time(type="text" placeholder="30 minutes" value= isRecipe ? blog.time : '')
        .field
          label Calories:
          input#calories(type="text" placeholder="450 kcal" value= isRecipe ? blog.calories : '')
        button(data-id= isRecipe ? blog.id : '' class= isNew ? 'postRecipe' : 'updateRecipe') #{recipeButtonText}
